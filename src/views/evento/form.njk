{% extends "navbar.njk" %}
{% set title = ("Registrar" if mode === 'create' else "Editar") %}
{% block style %}{% endblock %}
{% block content %}
<section class="home d-flex align-items-center" id="registro">
    <div class="container">
        <div class="row d-flex align-items-center">
            <div class="col">
                <h1 class="text-balck">Preencha as seguintes informações:</h1>
                <form>
                    <div class="mb-3">
                        <label for="titulo" class="form-label">Título</label>
                        <input type="titulo" class="form-control" id="titulo" aria-describedby="titulo">
                    </div>
                    <div class="mb-3">
                        <label for="descricao" class="form-label">Descrição</label>
                        <input type="titulo" class="form-control" id="descricao">
                    </div>
                    <div class="mb-3">
                        <label for="data_inicio">Data de Início:</label>
                        <input type="date" class="form-control" id="data_inicio">
                    </div>
                    <div class="mb-3">
                        <label for="data_termino">Data de Término:</label>
                        <input type="date" class="form-control" id="data_termino">
                    </div>
                    <div class="mb-3">
                        <input type="hidden" class="form-control" id="lat" disabled>
                    </div>
                    <div class="mb-3">
                        <input type="hidden" class="form-control" id="long" disabled>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div id="map" class="col"></div>
        </div>
    </div>
</section>
<script src="https://maps.googleapis.com/maps/api/js?key=&callback=initMap&libraries=&v=weekly" async="async"></script>
<script type="module" src="/scripts/mapa.js"></script>
{% endblock %}